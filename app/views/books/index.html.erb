
<h1>All Books</h1>

<ol>
  <% @books.each do |book| %>
    <h4><li><%= link_to book.name, book_path(book) %></h4>
      <ul>
        <li>Author: <%= link_to book.author_name, author_path(book.author) %></li>
        <li>Genres: 
          <ul>
            <% book.genres.each do |genre| %>
              <li><%= link_to genre.name, genre_path(genre) %></li>
            <% end %></li>
          </ul>
        </li>
        <li>Average User Rating: <%= pluralize(book.average_star_rating, 'star') %></li>
        <% if current_user.books.include?(book) %>
          <li>My Rating: <%= pluralize(book.ratings.where(user_id: current_user.id).pluck(:stars)[0], 'star') %></li>
        <% end %>
      </ul>
    </li>    
  <% end %>
</ol>
<br></br>
<h3>Don't see the book you're looking for?</h3>
<%= link_to "Create New Book", new_book_path, class:"btn btn-primary"%>
<br></br>





