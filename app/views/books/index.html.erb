<% if current_user %>
  <h1>My Books</h1><br>
  <%= link_to "Add Book", new_user_book_path(current_user) %>
<% else %>
  <h1>Browse Books</h1>
<% end %>



<ol>
  <% @books.each do |book| %>
    <li><%= link_to book.name, book_path(book) %>
      <ul>
        <li>Author: <%= book.author_name %></li>
        <li>Genres: 
          <ul>
            <% book.genres.each do |genre| %>
              <li><%= genre.name %></li>
            <% end %></li>
          </ul>
        </li>
        <li>Rating: <%= pluralize(book.ratings.where(user_id: params[:user_id]).pluck(:stars)[0], 'star') %></li>
      </ul>
    </li>
  <% end %>
</ol>




