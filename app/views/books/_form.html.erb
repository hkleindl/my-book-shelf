<%= form_for @book do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :author_name %>
  <%= f.text_field :author_name, list: "authors_autocomplete" %>
    <datalist id="authors_autocomplete">
      <% Author.all.each do |author| %>
        <option value="<%= author.name%>">
      <% end %>
    </datalist>
  <br>

  <%= fields_for :ratings do |rating| %>

    <%= rating.hidden_field :user_id, current_user.id %>

    <%= rating.hidden_field :book_id, @book.id %>

    <%= rating.label :stars %>
    <%= rating.number_field :stars %><br>

  <% end %>

  <%= f.submit %>
<% end %>