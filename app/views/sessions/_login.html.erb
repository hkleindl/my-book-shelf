<div class="login-form">
    <%= form_for(:user, url: sessions_path) do |f| %>
    <table>
      <tr style="text-align:left">
        <th>
          <%= f.label :email %>
        </th>
        <th>
          <%= f.label :password %>
        </th>
      </tr>
      <tr>
        <td>
          <%= f.text_field :email, placeholder: "Email", style: "margin-right:4px" %>
        </td>
        <td>
          <%= f.password_field :password, placeholder: "Password", style: "margin-right:4px" %>
        </td>
        <td>
          <%= f.submit "Log In", class: "btn-primary" %>
        </td>
      </tr>
    </table>
  <% end %>
  
  </div>