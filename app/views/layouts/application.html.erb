<!DOCTYPE html>
<html>
  <head>
    <title>MyBookShelf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# if current_user %>

        <header class="navbar navbar-fixed-top navbar-inverse">
            <div class="container">
              <%= link_to "MyBookShelf", "#", id: "logo" %>
              <nav>
                <ul class="navbar nav navbar-nav navbar-right">
                <% if login_page? %>
                    <%= render '/sessions/login_form' %>

                <% elsif !login_page? && !signup_page? %>

                  <li><%= link_to "Home", user_path(current_user) %></li>

                  <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Browse
                    <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "All Books", books_path %></li>
                      <li><%= link_to "Authors", authors_path %></li>
                      <li><%= link_to "Genres", genres_path %></li>
                    </ul>
                  </li>

                  <li><%= link_to "Log out", logout_path, method: :delete %></li>
                  <% end %>

                </ul>
            
              </nav>
    <%# end %>

            </div>
        </header>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
